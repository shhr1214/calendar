<%= form_for(@event) do |f| %>

  <div class="field">
    <%= f.label "イベント名" %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label "開始日時" %><br>
    <%= f.datetime_field :start_time %>
  </div>

  <div class="field">
    <%= f.label "終了日時" %><br>
    <%= f.datetime_field :end_time %>
  </div>

  <div class="field">
    <%= f.label "説明" %><br>
    <%= f.text_area :end_time %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>