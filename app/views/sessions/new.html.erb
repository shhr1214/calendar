<div class="page-header"><h1>Login</h1></div>
<%= form_tag sessions_path, html: {class: "form-horizontal"} do %>

<div class="form-group">
  <div class="row">
    <div class="field">
      <%= label_tag :name, 'Login name', class: 'control-label col-lg-2'  %>
      <div class="col-lg-4">
        <%= text_field_tag :name, params[:name] , class: 'form-control' %>
      </div>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <div class="field">
      <%= label_tag :pass, 'Password', class: 'control-label col-lg-2' %>
      <div class="col-lg-4">
        <%= password_field_tag :pass , params[:pass], class: 'form-control' %>
      </div>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <div class="col-lg-offset-2 col-lg-10">
      <div class="actions">
        <p><%= submit_tag "Login", class: 'btn btn-primary' %></p>
        <%= link_to "Sign up", new_user_path %>
      </div>
    </div>
  </div>
</div>

<% end %>
